# ========= CONFIGURAÇÃO DO LLM =========

# Defina aqui o provedor e modelo desejado:
# Exemplo para usar Groq com LLaMA 3:
GROQ_MODEL_NAME=groq/llama3-8b-8192

# Exemplo para usar OpenAI com GPT-4:
# GROQ_MODEL_NAME=openai/gpt-4

# Exemplo para usar Anthropic com Claude 3 Opus:
# GROQ_MODEL_NAME=anthropic/claude-3-opus-20240229


# ========= CHAVES DE API =========

# Chave de API para Groq
GROQ_API_KEY=sua-chave-groq-aqui

# Chave de API para OpenAI (caso use)
OPENAI_API_KEY=sua-chave-openai-aqui

# Chave de API para Anthropic (caso use)
ANTHROPIC_API_KEY=sua-chave-anthropic-aqui


# ========= OUTROS =========

# Ativa ou desativa os logs detalhados dos agentes (útil para debug)
DEBUG=True
